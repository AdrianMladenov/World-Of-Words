@using WoW.Models.ViewModels.QandA
@model AddQVM


@using (Html.BeginForm("AddAnswer", "QandA", FormMethod.Post))
{

    <h4>Това е въпросът на който отговаряте:</h4>
    <div class="form-horizontal">

        
        @Html.HiddenFor(model => model.Id)
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Word, "Дума:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Word,  new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.Word, "", new { @class = "text-danger" })
            </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Content, "Описание:", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Answer, "Oтговор:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Answer, 5, 23, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                <input type="submit" value="Добави" class="btn btn-default" />
                <input type="button" id="btncanceledt" value="Отмени" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
<script>
    $("#btncanceledt").on("click", function (e) {
        $("#dialog-edit").dialog("close");
        return false;
    });
</script>