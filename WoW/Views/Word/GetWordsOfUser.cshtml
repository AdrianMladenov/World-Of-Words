@model IEnumerable<WoW.Models.ViewModels.Words.AllWordsOfUser>
@{
    ViewBag.Title = "GetWords";
    string Active = "";
}
<h2>Това са думите добавени от вас</h2>


<h3>TODO да се покажат всички въпроси, отговори и думи в които потребителя участва</h3>

@using (Html.BeginForm())
{
    foreach (var word in Model)
    {
        <div class="words">
            @Html.DisplayFor(w => word.Name)
            @Html.LabelFor(w => word.Description, "Описание:")
            @*@Html.DisplayNameFor(m => m.Description)*@
            @Html.DisplayFor(w => word.Description)
            @Html.LabelFor(w => word.IsValid, "Статус:")
            @{if (word.IsValid == false) { Active = "Не е одобрена"; } else { Active = "Одобрена"; }}
            @Active
            <br />
            @if (User.IsInRole("Administrators") || word.User.UserName == User.Identity.Name)
            {
                @Html.ActionLink("Edit", "Edit", new { id = word.Id })
            }
        </div>
    }

}
